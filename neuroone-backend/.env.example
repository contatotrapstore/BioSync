# =========================================
# NeuroOne Backend - Environment Variables
# =========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =======================
# Database Configuration
# =======================
# PostgreSQL connection string from Supabase
# Get from: https://app.supabase.com/project/YOUR-PROJECT/settings/database
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres

# =======================
# Server Configuration
# =======================
# Port for the backend server (default: 3001)
PORT=3001

# Environment: development | production | test
NODE_ENV=development

# =======================
# CORS Configuration
# =======================
# Allowed origins for CORS (comma-separated)
# Development: Include localhost ports
# Production: Add your deployed frontend URLs
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =======================
# WebSocket Configuration
# =======================
# WebSocket ping timeout in milliseconds (default: 30000 = 30s)
WS_PING_TIMEOUT=30000

# WebSocket ping interval in milliseconds (default: 25000 = 25s)
WS_PING_INTERVAL=25000

# =======================
# Supabase Configuration
# =======================
# Supabase project URL
# Get from: https://app.supabase.com/project/YOUR-PROJECT/settings/api
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co

# Supabase service role key (KEEP THIS SECRET!)
# Get from: https://app.supabase.com/project/YOUR-PROJECT/settings/api
# WARNING: This key has FULL database access - NEVER commit to Git or expose to client
SUPABASE_SERVICE_KEY=[YOUR-SERVICE-ROLE-KEY]

# =======================
# SSL/TLS Configuration
# =======================
# Optional: Enable HTTPS/WSS in production
# Leave empty for HTTP/WS (development)
# For production, provide paths to your SSL certificate files

# Path to SSL private key
SSL_KEY_PATH=

# Path to SSL certificate
SSL_CERT_PATH=

# =======================
# PRODUCTION EXAMPLE
# =======================
# Uncomment and modify for production deployment:
#
# PORT=3001
# NODE_ENV=production
# DATABASE_URL=postgresql://postgres:secure-password@abc123.supabase.co:5432/postgres
# SUPABASE_URL=https://abc123.supabase.co
# SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# ALLOWED_ORIGINS=https://neuroone.vercel.app,https://neuroone.netlify.app
# SSL_KEY_PATH=/etc/letsencrypt/live/api.neuroone.com/privkey.pem
# SSL_CERT_PATH=/etc/letsencrypt/live/api.neuroone.com/fullchain.pem

# =======================
# RAILWAY DEPLOYMENT
# =======================
# Railway automatically provides:
# - PORT (use ${{PORT}})
# - DATABASE_URL (use ${{DATABASE_URL}} if using Railway PostgreSQL)
# You only need to set:
# - SUPABASE_URL
# - SUPABASE_SERVICE_KEY
# - ALLOWED_ORIGINS

# =======================
# RENDER DEPLOYMENT
# =======================
# Render automatically provides:
# - PORT
# - DATABASE_URL (from database connection)
# Set the rest manually in Render dashboard
