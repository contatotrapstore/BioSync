# ====================================================
# NEUROONE BACKEND - PRODUCTION ENVIRONMENT VARIABLES
# ====================================================
# Este é um arquivo de exemplo. Copie para .env.production e preencha com valores reais
# IMPORTANTE: NUNCA commite .env.production no Git!
# ====================================================

# ====================================================
# SUPABASE DATABASE
# ====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Database connection string (opcional - apenas se precisar acesso direto)
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# ====================================================
# SERVER CONFIGURATION
# ====================================================
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# ====================================================
# JWT AUTHENTICATION
# ====================================================
# IMPORTANTE: Gere um secret forte em produção!
# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-random-secret-here-min-32-chars

# Token expiration
JWT_EXPIRES_IN=24h

# ====================================================
# CORS CONFIGURATION
# ====================================================
# Frontend URL de produção
CORS_ORIGIN=https://your-frontend-domain.com
WS_CORS_ORIGIN=https://your-frontend-domain.com

# Allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ====================================================
# WEBSOCKET CONFIGURATION
# ====================================================
WS_PORT=3001
WS_PATH=/socket.io

# ====================================================
# EEG DATA PROCESSING
# ====================================================
EEG_SAMPLING_RATE=512
EEG_BUFFER_SIZE=100
EEG_RETENTION_DAYS=90

# ====================================================
# SESSION CONFIGURATION
# ====================================================
SESSION_DEFAULT_DURATION=45
SESSION_AUTO_SAVE_INTERVAL=30

# ====================================================
# RATE LIMITING
# ====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================================
# LOGGING
# ====================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ====================================================
# OPTIONAL INTEGRATIONS
# ====================================================
# Email service (se configurar)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Storage (se usar Supabase Storage)
# STORAGE_BUCKET=neuroone-files

# ====================================================
# SECURITY
# ====================================================
# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=10

# Session secret - Gere com crypto.randomBytes(64).toString('hex')
SESSION_SECRET=your-session-secret-here-min-32-chars

# ====================================================
# MONITORING (opcional)
# ====================================================
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-key

# ====================================================
# DEPLOYMENT INFO
# ====================================================
DEPLOY_PLATFORM=render
DEPLOY_URL=https://your-backend-url.com
DEPLOY_DATE=2025-01-19
